@{
    ViewData["Title"] = "Login Page";
}

@model Diver

<style>
    body{
    background: url(images/PICT0073.JPG) no-repeat center center fixed;
    -webkit-background-size: cover;
    -moz-background-size: cover;
    background-size: cover;
    -o-background-size: cover;
    }
</style>

<div class="row mt-3 ml-3">
    
</div>
<div class="row mb-3 justify-content-center">
    <h3 class="col-12 text-center text-white font-weight-bold">Diver Log Login</h3>
</div>
<div class="row mb-3 justify-content-center">
    <a class="col-1 text-center text-light" href="/register">Register</a>
</div>
<div class="mt-5">
    <form asp-action="Authenticate" asp-controller="Home" method="POST">
        <div class="row justify-content-center">
            <div class="form-group col-3">
                <span class="text-danger" asp-validation-for="Username"></span>
                <input class="form-control mt-1 mb-4" asp-for="Username" placeholder="User Name">

                <span class="text-danger" asp-validation-for="Password"></span>
                <input class="form-control mt-1 mb-4" asp-for="Password" placeholder="Password">
            </div>
        </div>
        <div class="row justify-content-center">
            <button type="submit" class="btn btn-primary mt-3">LOGIN</button>
        </div>
    </form>
</div>

